# Tessa Audio Capture & Streaming Configuration
# Copy this file to .env and adjust the values as needed

# Audio Input Device (leave empty for system default)
INPUT_DEVICE=""

# ZMQ Socket Addresses (required)
PUB_ADDRESS="tcp://*:5555"
DEALER_ADDRESS="tcp://*:5556"

# ZMQ Topics
PUB_TOPIC="audio"
DEALER_TOPIC="control"

# Service Information
SERVICE_NAME="tessa_audio"
STREAM_ID=""

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1
BIT_DEPTH=16
BUFFER_SIZE=100

# Operation Flags (true/false)
VERBOSE=true
LIST_DEVICES=false 
